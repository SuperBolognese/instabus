<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusStopDetailsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bus_images_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Couleur du FAB = colorAccent à modifier dans le fichier thème -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_bus_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="34dp"
        android:contentDescription="@string/add_new_image"
        android:onClick="newImage"
        android:src="@drawable/ic_baseline_add_24" />
</RelativeLayout>